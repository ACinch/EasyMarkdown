{
  "name": "osxmd",
  "version": "1.0.0",
  "description": "A simple markdown editor for macOS",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "pnpm build && electron .",
    "build": "pnpm build:main && pnpm build:preload && pnpm build:renderer && pnpm build:css && pnpm copy:html",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "node scripts/build-renderer.js",
    "build:css": "tailwindcss -i src/renderer/styles.css -o dist/renderer/styles.css",
    "copy:html": "cp src/renderer/index.html dist/renderer/",
    "dev": "concurrently \"pnpm build:main -- --watch\" \"pnpm build:preload -- --watch\" \"pnpm build:css -- --watch\"",
    "package": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "marked": "^11.1.0",
    "marked-highlight": "^2.1.0"
  },
  "build": {
    "appId": "com.osxmd.app",
    "productName": "OSX Markdown Editor",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ]
  }
}
